<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recordvideo.RecordVideoFragment">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/cameraOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="cameraRotate,cameraFilters" />

    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:cameraEngine="camera1"
        app:cameraMode="video"
        app:cameraPreview="glSurface" />

    <ImageView
        android:id="@+id/cameraRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rotate_camera"
        app:layout_constraintBottom_toTopOf="@+id/cameraShutter"
        app:layout_constraintEnd_toEndOf="@id/cameraShutter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/cameraShutter"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cameraShutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_start_camera"
        app:layout_constraintBottom_toTopOf="@+id/cameraFilters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cameraRotate" />

    <ImageView
        android:id="@+id/cameraFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_options_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cameraShutter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/cameraShutter"
        app:layout_constraintTop_toBottomOf="@+id/cameraShutter" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/filtersList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/dark_overlay"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/cameraFilters"
        app:layout_constraintEnd_toEndOf="@id/cameraFilters"
        app:layout_constraintStart_toStartOf="@id/cameraFilters">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/grayscale"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/grayscale" />

            <ImageView
                android:id="@+id/hue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/hue" />

            <ImageView
                android:id="@+id/blackAndWhite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/black_and_white" />

            <ImageView
                android:id="@+id/documentary"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/documentary" />

            <ImageView
                android:id="@+id/temperature"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/temperature" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>