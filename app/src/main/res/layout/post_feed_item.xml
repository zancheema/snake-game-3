<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imagePostUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvPostTime"
        app:layout_constraintStart_toEndOf="@+id/imagePostUser"
        app:layout_constraintTop_toTopOf="@+id/imagePostUser"
        tools:text="@string/username" />

    <TextView
        android:id="@+id/tvPostTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imagePostUser"
        app:layout_constraintStart_toStartOf="@+id/tvUsername"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername"
        tools:text="@string/sample_post_time" />

    <ImageView
        android:id="@+id/commentPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_message" />

    <VideoView
        android:id="@+id/videoViewPost"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePostUser" />

    <TextView
        android:id="@+id/tvPostTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/videoViewPost"
        app:layout_constraintStart_toStartOf="@+id/videoViewPost"
        app:layout_constraintTop_toBottomOf="@+id/videoViewPost"
        tools:text="@string/sample_post_title" />

    <TextView
        android:id="@+id/tvPostDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvPostTitle"
        app:layout_constraintStart_toStartOf="@+id/tvPostTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvPostTitle"
        tools:text="@string/dummy_paragraph" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/tvPostDescription"
        app:layout_constraintStart_toStartOf="@+id/tvPostDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvPostDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>